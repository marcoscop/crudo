<div class="row">
  <div class="col-md-6">
    <h3>Lista de Cursos</h3>
  </div>
  <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
    <a href="/user/addUser"><button class="btn btn-outline-primary">AGREGAR
        CURSO</button></a>
  </div>
</div>
<div class="col-12">
<table class="table text-center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">CURSO</th>
      <th scope="col">TURNO</th>
      <!--<th scope="col">ACCIONES</th>-->
      <th colspan="2">ACCIONES</th>
    </tr>
  </thead>
  <tbody>
    {{#each cursos}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.nombre}}</td>
        <td>{{this.turno}}</td>         
        <td>
          <a href="/cursos/edit/{{this.id}}">
            <button type="button" class="btn btn-outline-warning px-3">
              <img src="/img/editar.png" alt="" />
            </button>
          </a>
        </td>
        <td>
          <form action="/user/delete/{{this.id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm px-3">
              <img src="/img/borrar.png" alt="" />
            </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>