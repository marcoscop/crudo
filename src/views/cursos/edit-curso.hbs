<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Votar</a></li>
    <li class="breadcrumb-item"><a href="/cursos/renderCursos">Cursos</a></li>
    <li class="breadcrumb-item active" aria-current="page">Agregar Curso</li>
  </ol>
</nav>
<div class="row">
  <div class="col-md-5 mx-auto">
    <div class="card">
      <div class="card-header bg-primary">
        <h3 class="text-white">Editar Curso</h3>
      </div>
      {{#each curso}}
      <form class="mt-2" action="/cursos/update/{{this.id}}?_method=PUT" method="POST">
        <div class="form-row">
          <div class="form-floating mb-3">
            <input
              type="text"
              name="nombre_curso"
              class="form-control"
              id="nombre_curso"
              placeholder="Nombre Curso"
              value="{{this.nombre}}"
            />
            <label for="nombre_curso">Curso</label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="text"
              name="turno_curso"
              class="form-control"
              id="turno"
              placeholder="Turno"
              value="{{this.turno}}"
            />
            <label for="turno">Turno</label>
          </div>
        </div>
        <div class="col-12">
          <button class="btn btn-primary">GUARDAR</button>
        </div>
      </form>
      {{/each}}
    </div>
  </div>
</div>