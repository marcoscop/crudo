<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Votar</a></li>    
    <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
  </ol>
</nav>
<div class="row">
  <div class="col-md-6">
    <h3>Lista de Usuarios</h3>
  </div>
  <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
    <a href="/user/addUser"><button class="btn btn-outline-primary">AGREGAR
        USUARIO</button></a>
  </div>
</div>
<div class="col-12">
<table class="table text-center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">USUARIO</th>
      <th scope="col">EDITAR</th>
      <th scope="col">ELIMINAR</th>
      <!--<th colspan="2">ACCIONES</th>-->
    </tr>
  </thead>
  <tbody>
    {{#each listaUser}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.nombre}}</td>
        <td>
          <a href="/user/edit/{{this.id}}">
            <button type="button" class="btn btn-outline-warning px-3">
              <img src="/img/editar.png" alt="" />
            </button>
          </a>
        </td>
        <td>
          <form action="/user/delete/{{this.id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm px-3">
              <img src="/img/borrar.png" alt="" />
            </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>